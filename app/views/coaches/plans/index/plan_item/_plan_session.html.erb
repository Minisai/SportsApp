<div class="days">
  <ul class="list-inline">
    <li ng-repeat='day in plan_item.item.days'>
      <table class="table-striped day-schedule brd">
        <thead>
          <tr>
            <th> Day {{$index+1}} </th>
            <th> Reps </th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat='exercise in day.exercises'>
            <td>{{exercise.name}}</td>
            <td>{{exercise.repetitions}}</td>
          </tr>
        </tbody>
      </table>
    </li>
  </ul>
</div>