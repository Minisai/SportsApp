<form class='form-horizontal search-player' ng-submit="playersSearch()">
  <div class="row">
    <div class="col-md-6">
      <div class="control-group">
        <%= label_tag 'Player ID', nil, :class => 'control-label col-lg-4' %>
        <div class='controls col-lg-8'>
          <%= text_field_tag 'filter.player_id', nil, :class => "form-control", 'ng-model' => 'filter.player_id' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <%= submit_tag 'Search', :class => 'btn btn-success' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="control-group">
        <%= label_tag 'Name', nil, :class => 'control-label col-lg-4' %>
        <div class='controls col-lg-8'>
          <%= text_field_tag 'filter.name', nil, :class => "form-control", 'ng-model' => 'filter.name' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="control-group">
        <%= label_tag 'Country', nil, :class => 'control-label col-lg-4' %>
        <div class='controls col-lg-8'>
          <%= text_field_tag 'filter.country', nil, :maxlength => 15, :class => "form-control", 'ng-model' => 'filter.country' %>
        </div>
      </div>
    </div>
  </div>
</form>