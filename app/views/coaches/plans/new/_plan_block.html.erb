<div class="row">
  <form class='form-horizontal add-assessment' ng-submit="createPlan()" name='planForm'>
    <div class="col-md-9">
      <div class="form-group">
        <%= label_tag 'Name', nil, :class => 'control-label col-lg-2' %>
        <div class='controls col-lg-10'>
          <%= text_field_tag :name, nil, :class => "form-control", 'ng-model' => 'plan.name', :required => '' %>
        </div>
      </div>
      <div class="form-group ">
        <%= label_tag 'Description', nil, :class => 'control-label col-lg-2' %>
        <div class='controls col-lg-10'>
          <%= text_area_tag :description, nil, :class => "form-control", 'ng-model' => 'plan.description' %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <%= submit_tag "Save Plan", :class => "btn btn-success" %>
    </div>
  </form>
</div>

<div class='plans-table'>
  <%= render 'coaches/plans/new/plans/plans_table' %>
</div>