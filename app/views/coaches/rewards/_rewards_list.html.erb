<div class="brd default-rewards">
  <h5>Sports Hub Sponsored Rewards</h5>
  <div class="default-rewards-table" ng-init="defaultRewards = <%= json_for(@default_rewards) %>">
    <table class="table">
      <tr ng-click='defaultRewardSelection($index)' ng-repeat="defaultReward in defaultRewards"
          ng-class="{highlight:defaultReward.id == selectedDefaultReward.id}">
        <td>{{defaultReward.name}}</td>
      </tr>
    </table>
  </div>
</div>
<div class="brd custom-rewards">
  <h5>Custom Rewards</h5>
  <div class="create-table-button pull-right">
    <%= link_to 'Create New Reward', nil, :remote => true, :class => 'btn btn-success', 'ng-click' => 'createNewRewardClicked()' %>
  </div>
  <div class="custom-rewards-table" ng-init="rewards = <%= json_for(@rewards) %>">
    <table class="table">
      <tr ng-click='rewardSelection($index)' ng-repeat="reward in rewards"
          ng-class="{highlight:reward.id == selectedReward.id}">
        <td>{{reward.name}}</td>
      </tr>
    </table>
  </div>
</div>
