<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Add Player</h4>
    </div>
    <form class='form-horizontal' ng-submit="createPlayer()">
      <div class="modal-body">
        <div class="form-group">
          <%= label_tag 'Name', nil, :class => 'control-label col-lg-2' %>
          <div class='controls col-lg-10'>
            <%= text_field_tag :name, nil, :class => "form-control", 'ng-model' => 'new_player.name' %>
          </div>
        </div>
        <div class="form-group ">
          <%= label_tag 'Email', nil, :class => 'control-label col-lg-2' %>
          <div class='controls col-lg-10'>
            <%= text_field_tag :email, nil, :class => "form-control", 'ng-model' => 'new_player.email' %>
          </div>
        </div>
        <div class="form-group ">
          <%= label_tag 'Program code', nil, :class => 'control-label col-lg-2' %>
          <div class='controls col-lg-10'>
            <%= text_field_tag :program_code, nil, :class => "form-control", 'ng-model' => 'new_player.program_code' %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= submit_tag "Invite", :class => "btn btn-default" %>
      </div>
    </form>
  </div>
</div>