<div class="brd">
  <div class="reward-dummy" ng-hide='selectedReward || selectedDefaultReward || newReward' >
    <%= render 'reward_dummy' %>
  </div>

  <div class="default-reward" ng-show='selectedDefaultReward'>
    <%= render 'default_reward' %>
  </div>

  <div class="custom-reward" ng-show='selectedReward'>
    <%= render 'custom_reward' %>
  </div>

  <div class="new-reward" ng-show='newReward'>
    <%= render 'new_reward' %>
  </div>
</div>