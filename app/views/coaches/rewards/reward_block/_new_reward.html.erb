<div class="reward">
  <form class='form-horizontal add-reward' ng-submit="createReward()" name='rewardForm'>
    <div class="row">
      <div class="col-md-3">
        <img src="{{newReward.image_url}}" alt="Select image from above"/>
      </div>
      <div class="col-md-9">
        <div class="row">
          <div class="col-md-2">
            <p><b>Name:</b></p>
          </div>
          <div class="col-md-10">
            <%= text_field_tag :name, nil, :class => "form-control", 'ng-model' => 'newReward.name', :required => '' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <p><b>Description:</b></p>
          </div>
          <div class="col-md-10">
            <%= text_area_tag :description, nil, :class => "form-control", 'ng-model' => 'newReward.description' %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= submit_tag "Save Reward", :class => "btn btn-success" %>
      </div>
    </div>
  </form>
</div>
<%= render 'coaches/rewards/reward_block/reward_images' %>