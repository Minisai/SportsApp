<div class="reward">
  <div class="row">
    <div class="col-md-3">
      <img src="{{plan_item.item.image_url}}" alt="{{plan_item.item.name}}" ng-show='plan_item.item.image_url'/>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-2">
          <p><b>Name:</b></p>
        </div>
        <div class="col-md-10">
          <p> {{plan_item.item.name}} </p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <p><b>Description:</b></p>
        </div>
        <div class="col-md-10">
          <p ng-show='plan_item.item.description'> {{plan_item.item.description}} </p>
          <p ng-hide='plan_item.item.description'> No description </p>
        </div>
      </div>
    </div>
  </div>
</div>