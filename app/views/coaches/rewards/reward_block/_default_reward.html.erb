<div class="reward">
  <div class="row">
    <div class="col-md-3">
      <img src="{{selectedDefaultReward.image_url}}" alt="{{selectedDefaultReward.name}}"/>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-2">
          <p><b>Name:</b></p>
        </div>
        <div class="col-md-10">
          <p> {{selectedDefaultReward.name}} </p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <p><b>Description:</b></p>
        </div>
        <div class="col-md-10">
          <p> {{selectedDefaultReward.description}} </p>
        </div>
      </div>
    </div>
  </div>
</div>