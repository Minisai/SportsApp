<div class="brd default-rewards">
  <h5>Sports Hub Sponsored Rewards</h5>
  <div class="default-rewards-table" ng-init="default_rewards = <%= json_for(@default_rewards) %>">
    <table class="table">
      <tr ng-click='defaultRewardSelection(default_reward.id)' ng-repeat="default_reward in default_rewards"
          ng-class="{highlight:default_reward.id == selectedDefaultReward.id}">
        <td>{{default_reward.name}}</td>
      </tr>
    </table>
  </div>
</div>
<div class="brd custom-rewards">
  <h5>Custom Rewards</h5>
  <div class="custom-rewards-table" ng-init="rewards = <%= json_for(@rewards) %>">
    <table class="table">
      <tr ng-click='rewardSelection(reward.id)' ng-repeat="reward in rewards"
          ng-class="{highlight:reward.id == selectedReward.id}">
        <td>{{reward.name}}</td>
      </tr>
    </table>
  </div>
</div>
