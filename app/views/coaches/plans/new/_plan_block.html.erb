<div class="row">
  <form class='form-horizontal add-assessment' ng-submit="createPlan()" name='planForm'>
    <div class="col-md-9">
      <div class="form-group">
        <%= label_tag 'Name', nil, :class => 'control-label col-lg-2' %>
        <div class='controls col-lg-10'>
          <%= text_field_tag :name, nil, :class => "form-control", 'ng-model' => 'plan.name', :required => '' %>
        </div>
      </div>
      <div class="form-group ">
        <%= label_tag 'Description', nil, :class => 'control-label col-lg-2' %>
        <div class='controls col-lg-10'>
          <%= text_area_tag :description, nil, :class => "form-control", 'ng-model' => 'plan.description' %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <%= submit_tag "Save Plan", :class => "btn btn-success" %>
    </div>
  </form>
</div>

<div class='exercises-table'>
  <table data-drop="true" data-jqyoui-options ng-model="droppedDrill" jqyoui-droppable="{onDrop: 'dropDrillHandler'}">
    <tr class='brd' ng-repeat='exercise in exercises'>
      <td>
        {{exercise.name}}
        <span class='glyphicon plus-minus glyphicon-minus' ng-click="removeDrillClick($index)" ng-show='true'></span>
        <span class='repetitions'>
          <a href="#" editable-text="exercise.repetitions" buttons="no">
            {{exercise.repetitions}}
          </a>
        </span>
      </td>
    </tr>
    <tr class='brd-white'>
      <td> Drag & drop a drill from the left side to add to plan</td>
    </tr>
  </table>
</div>